/**index.wxss**/
page{
  height:100%;
  background-color:#b3d4db;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-weight:bold;
}

.userinfo-avatar {
  width: 240rpx;
  height: 240rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #000;
}

.usermotto {
  margin-top: 180px;
  border:1px solid #405f80;
  width:150px;
  height:30px;
  border-radius:5px;
  text-align:center;
}
.user-motto{
  font-size:30rpx;
  font-family:MicroSoft Yahei;
  font-weight:bold;
  line-height:40rpx;
  color:#405f80;
}